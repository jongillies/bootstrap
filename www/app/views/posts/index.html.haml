- model_class = Post
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize

= search_form_for @search do |f|
  .field
    =f.label :title_or_description_cont, "Name or Description", :class => 'control-label'
    =f.text_field :title_or_description_cont, :class => 'text_field'
    .actions
      = f.submit "Search", :class => 'btn btn-mini'

%table.table.table-striped
  %thead
    %tr
      %th= sort_link @search, model_class.human_attribute_name(:id)
      %th= sort_link @search, model_class.human_attribute_name(:title)
      %th= sort_link @search, model_class.human_attribute_name(:description)
      %th= sort_link @search, model_class.human_attribute_name(:created_at)
      %th= t '.actions', :default => t("helpers.actions")
  %tbody
    - @posts.each do |post|
      %tr
        %td= link_to post.id, post_path(post)
        %td= post.title
        %td= post.description
        %td=l post.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_post_path(post), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), post_path(post), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= paginate @posts
= link_to t('.new', :default => t("helpers.links.new")), new_post_path, :class => 'btn btn-primary'
